<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car1" class="com.shinhan.myapp.section02.CarVO" />
	<bean id="car2" class="com.shinhan.myapp.section02.CarVO">
		<constructor-arg index="0" value="BMW720"></constructor-arg>
		<constructor-arg index="1" value="7000"></constructor-arg>
	</bean>
	<bean id="car3" class="com.shinhan.myapp.section02.CarVO">
		<!-- 생성자로 데이터 넣기 -->
		<constructor-arg name="model" value="BMW720"></constructor-arg>
		<constructor-arg name="price" value="7000"></constructor-arg>
	</bean>
	<bean id="car4" class="com.shinhan.myapp.section02.CarVO">
		<!-- setter로 데이터 넣기 -->
		<property name="model" value="모닝"></property>
		<property name="price" value="1000"></property>
	</bean>

	<bean id="people1" class="com.shinhan.myapp.section02.PeopleVO" />
	<bean id="people2" class="com.shinhan.myapp.section02.PeopleVO">
		<constructor-arg name="name" value="현상"></constructor-arg>
		<constructor-arg name="phone" value="010-1234-1234"></constructor-arg>
		<constructor-arg name="car" ref="car3"></constructor-arg>
		<constructor-arg name="major">
			<list>
				<value>컴퓨터공학과</value>
				<value>통계학과</value>
			</list>
		</constructor-arg>
		<constructor-arg name="licenseList">
			<list>
				<ref bean="licence1" />
				<ref bean="licence2" />
			</list>
		</constructor-arg>
		<constructor-arg name="myProperties">
			<props>
				<prop key="security1">key1</prop>
				<prop key="security2">key2</prop>
			</props>
		</constructor-arg>
	</bean>

	<bean id="licence1" class="com.shinhan.myapp.section02.License"
		p:title="정보처리기사" p:year="2000" />
	<bean id="licence2" class="com.shinhan.myapp.section02.License"
		p:title="ADSP" p:year="2022" />

	<!-- <bean id="people3" class="com.shinhan.myapp.section02.PeopleVO"> <constructor-arg 
		name="name" value="재명"></constructor-arg> <constructor-arg name="phone" value="010-5678-5678"></constructor-arg> 
		<constructor-arg name="car" ref="car2"></constructor-arg> </bean> -->

	<bean id="people4" class="com.shinhan.myapp.section02.PeopleVO"
		p:name="정진" p:phone="010-1234-1234" p:car-ref="car4" />
	
	<bean id="car" class="com.shinhan.myapp.section02.CarVO" 
		p:model="ABC" p:price="500"
	></bean>
	<bean id="people5" class="com.shinhan.myapp.section02.PeopleVO" autowire="byName"></bean>

</beans>
